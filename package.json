{
  "name": "react-isomorphic",
  "version": "1.0.0",
  "repository": "git@github.com:jgchenu/react-isomorphic.git",
  "scripts": {
    "dev": "npm-run-all --parallel dev:**",
    "build": "npm-run-all --parallel build:**",
    "dev:start": "nodemon --watch ./server --exec node ./server/index.js ",
    "dev:server": "NODE_ENV=development webpack --watch --config webpack.server.js ",
    "dev:client": "NODE_ENV=development webpack-dev-server --config webpack.client.js",
    "build:client": "webpack --config webpack.client.js",
    "build:server": "webpack --config webpack.server.js"
  },
  "author": "jgchenu <jgchenu@foxmail.com>",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "./pre_commit.sh && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint"
    ],
    "*.{css,less}": "stylelint"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@loadable/component": "^5.11.0",
    "@loadable/server": "^5.11.0",
    "core-js": "3",
    "koa": "^2.11.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "less": "^3.10.3",
    "nunjucks": "^3.2.0",
    "prop-types": "15.7.2",
    "react": "^16.12.0",
    "react-dom": "npm:@hot-loader/react-dom",
    "react-hot-loader": "^4.12.19",
    "react-redux": "^7.2.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "7.8.4",
    "@babel/plugin-transform-runtime": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-react": "7.8.3",
    "@commitlint/config-conventional": "8.3.4",
    "@loadable/babel-plugin": "^5.12.0",
    "@loadable/webpack-plugin": "^5.12.0",
    "autoprefixer": "9.7.4",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-loader": "3.0.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.3",
    "eslint-plugin-react-hooks": "2.4.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "4.2.3",
    "isomorphic-style-loader": "^5.1.0",
    "less-loader": "^5.0.0",
    "lint-staged": "10.0.8",
    "mini-css-extract-plugin": "^0.8.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "1.19.1",
    "stylelint": "13.2.0",
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-webpack-plugin": "1.2.3",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "^3.9.0",
    "webpack-node-externals": "1.7.2"
  }
}
